# set your user tokens as enivornment variables, such as ~/.secrets
# See the README for examples.
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  softback = reset --soft HEAD^
  addp = add --patch           # stage commits chunk by chunk
  f = fetch
  mergecommit = merge --no-ff
  depintegration = !git push origin integration && git push integration HEAD:master
  depstaging = !git push origin develop && git push staging HEAD:master
  merged = branch --merged
  unmerged = branch --no-merged
  release = flow release

  # branch
  br = branch -v                     # branch (verbose)

  # commit
  ci = commit -m                       # commit
  amend = commit --amend -m           # ammend your last commit

  # checkout
  co = checkout                     # checkout
  start = checkout -b

  # diff
  df = diff                          # diff unstaged changes
  dfc = diff --cached                # diff staged changes
  last = show --summary                 # diff last committed change

  # log
  l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
  changelog = log --pretty=format:\" * %s\"

  # push
  ps = push origin HEAD                        # push

  # rebase
  rc = rebase --continue            # continue rebase
  rs = rebase --skip                # skip rebase

  # remote
  r = remote -v                     # show remotes (verbose)

  # status
  st = status -sb                        # status

[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[merge]
  summary = true
  verbosity = 1
	tool = opendiff
[apply]
  whitespace = nowarn
[branch]
  autosetuprebase = always
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = tracking
[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.yadr/gitignore_global
[advice]
  statusHints = false
[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = false
[user]
	name = Tonatiuh Nunez
	email = tonatiuhn@hotmail.es
[mergetool]
	keepBackup = false
